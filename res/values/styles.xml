<resources>

    <style name="Theme.Qt_style" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background_qt_style</item>
        <item name="popupMenuStyle">@style/PopupMenu.Qt_style</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Qt_style</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Qt_style</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Qt_style</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Qt_style</item>
        <item name="actionModeBackground">@drawable/cab_background_top_qt_style</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_qt_style</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Qt_style</item>
    </style>

    <style name="ActionBar.Solid.Qt_style" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_qt_style</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_qt_style</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_qt_style</item>
        <item name="progressBarStyle">@style/ProgressBar.Qt_style</item>
    </style>

    <style name="ActionBar.Transparent.Qt_style" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_qt_style</item>
        <item name="progressBarStyle">@style/ProgressBar.Qt_style</item>
    </style>

    <style name="PopupMenu.Qt_style" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_qt_style</item>
    </style>

    <style name="DropDownListView.Qt_style" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_qt_style</item>
    </style>

    <style name="ActionBarTabStyle.Qt_style" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_qt_style</item>
    </style>

    <style name="DropDownNav.Qt_style" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_qt_style</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_qt_style</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_qt_style</item>
    </style>

    <style name="ProgressBar.Qt_style" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_qt_style</item>
    </style>

    <style name="ActionButton.CloseMode.Qt_style" parent="@style/Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_qt_style</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Qt_style.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Qt_style</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Qt_style</item>
    </style>

    <style name="PopupTheme" parent="@style/Theme.Qt_style">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>